<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:id="@+id/layout1"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Flight No."
        android:id="@+id/textView1"
        android:layout_alignTop="@+id/textView2" android:layout_alignStart="@+id/textView3"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText1"
        android:hint="DE 143"
        android:layout_below="@+id/textView1" android:layout_alignStart="@+id/textView1"
        android:layout_toStartOf="@+id/button1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Departure"
        android:id="@+id/textView2"
        android:layout_toEndOf="@+id/textView6"
        android:layout_marginTop="40dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_below="@+id/textView1" android:layout_alignStart="@+id/textView2"
        android:hint="yyyy-mm-dd"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/button1"
        android:layout_below="@+id/editText2" android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="From"
        android:id="@+id/textView3"
        android:layout_below="@+id/button1" android:layout_alignStart="@+id/editText3"
        android:layout_marginTop="44dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_alignTop="@+id/editText4"
        android:layout_marginStart="40dp"
        android:hint="Antalya"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge" android:text="To"
              android:id="@+id/textView4"
              android:layout_alignTop="@+id/textView3" android:layout_toEndOf="@+id/textView6"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:layout_below="@+id/textView4" android:layout_alignEnd="@+id/textView7"
        android:hint="Frankfurt"
        android:layout_alignStart="@+id/textView4"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Depart"
        android:id="@+id/textView5"

        android:layout_above="@+id/editText6" android:layout_alignStart="@+id/editText3"/>
    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/editText5"
              android:hint="hh:mm dd.mm.yyyy"
              android:layout_below="@+id/textView5" android:layout_alignStart="@+id/textView5"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Arrival"
        android:id="@+id/textView6"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/editText4" android:layout_centerHorizontal="true"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText6"
        android:hint="hh:mm dd.mm.yyyy"
        android:layout_below="@+id/textView6" android:layout_alignStart="@+id/textView6"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Status"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/textView6" android:layout_alignEnd="@+id/textView2"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText7"
        android:text="456"
        android:layout_alignTop="@+id/editText6" android:layout_alignStart="@+id/textView7"/>

    </RelativeLayout>