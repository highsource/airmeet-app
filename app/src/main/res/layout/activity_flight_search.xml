<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:id="@+id/layout1"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/flightNumber"
        android:id="@+id/flightNumber_textView"
        android:layout_alignTop="@+id/departureDate_textView" android:layout_alignStart="@+id/from_textView"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/flightNumber_editText"
        android:hint="LH1182"
        android:layout_below="@+id/flightNumber_textView" android:layout_alignStart="@+id/flightNumber_textView"
        android:layout_toStartOf="@+id/search_button"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/departureDate"
        android:id="@+id/departureDate_textView"
        android:hint="2016-03-05"
        android:layout_toEndOf="@+id/arrival_textView"
        android:layout_marginTop="40dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/departureDate_editText"
        android:layout_below="@+id/departureDate_textView"
        android:layout_alignStart="@+id/departureDate_textView"
        android:hint="yyyy-mm-dd"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:id="@+id/search_button"
        android:layout_below="@+id/departureDate_editText" android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/from"
        android:id="@+id/from_textView"
        android:layout_below="@+id/search_button" android:layout_alignStart="@+id/from_editText"
        android:layout_marginTop="44dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/from_editText"
        android:layout_alignTop="@+id/to_editText"

        android:layout_marginStart="40dp"

        />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge" android:text="@string/to"
              android:id="@+id/to_textView"
              android:layout_alignTop="@+id/from_textView" android:layout_toEndOf="@+id/arrival_textView"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/to_editText"
        android:layout_below="@+id/to_textView" android:layout_alignEnd="@+id/status_textView"
        android:hint="Frankfurt"
        android:layout_alignStart="@+id/to_textView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/depart"
        android:id="@+id/depart_textView"

        android:layout_above="@+id/arrival_editText" android:layout_alignStart="@+id/from_editText"/>
    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/depart_editText"
              android:hint="hh:mm dd.mm.yy"
              android:layout_below="@+id/depart_textView" android:layout_alignStart="@+id/depart_textView"
              android:layout_alignEnd="@+id/flightNumber_editText"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/arrival"
        android:id="@+id/arrival_textView"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/to_editText" android:layout_centerHorizontal="true"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arrival_editText"
        android:hint="hh:mm dd.mm.yy"
        android:layout_below="@+id/arrival_textView" android:layout_alignStart="@+id/arrival_textView"
        android:layout_alignEnd="@+id/to_textView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/status"
        android:id="@+id/status_textView"
        android:layout_alignTop="@+id/arrival_textView" android:layout_alignEnd="@+id/departureDate_textView"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status_editText"
        android:text="456"
        android:layout_alignTop="@+id/arrival_editText" android:layout_alignStart="@+id/status_textView"/>

    </RelativeLayout>